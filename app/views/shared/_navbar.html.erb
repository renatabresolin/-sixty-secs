<div class="navbar navbar-expand-sm navbar-light navbar-sixty-secs">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <ul class="navbar-nav mr-auto">
    <% unless current_user %>
    <li class="nav-item"><strong>
      <%= link_to "ENTRAR", new_user_session_path, class: "nav-link" %>
    </strong></li>
    <li class="nav-item"><strong>
      <%= link_to "CADASTRE-SE", new_user_registration_path, class: "nav-link" %>
    </strong></li>
    <% end %>
  </ul>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
<!--       <li class="nav-item active">
        <%#= link_to "SOMETHING", root_path, class: "nav-link" %>
      </li> -->


      <% if current_user %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, transformation: [{width: 55, height: 55, gravity: "face", radius: "max", crop: "fill", quality: 80}, {width: 55, crop: "scale"}], class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else  %>
            <%= image_tag 'logo.png', transformation: [{width: 55, height: 55, gravity: "face", radius: "max", crop: "fill", quality: 80}, {width: 55, crop: "scale"}], class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Biotipos", "#", class: "dropdown-item" %>
            <%#= link_to "", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
